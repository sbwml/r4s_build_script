 	}
@@ -604,6 +603,9 @@ static inline void tcp_ecn_send_syn(stru
 			tp->syn_ect_snt = inet_sk(sk)->tos & INET_ECN_MASK;
 		} else {
 			tcp_ecn_mode_set(tp, TCP_ECN_MODE_RFC3168);
